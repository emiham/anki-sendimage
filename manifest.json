{
  "manifest_version": 2,
  "name": "Send image to Anki",
  "version": "0.1",
  "description": "Add an image to the Anki card currently being reviewed",
  "homepage_url": "https://github.com/emiham/anki-sendimage",
  "icons": {
    "48": "icons/icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "webRequest",
    "http://127.0.0.1/"
  ]
}
